.about-section
  // background-image: url('../images/about-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background-color #000

  &__container
    position relative
    padding 20px 0 20px 0
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding 50px 0 50px 0
    +above($breakpoints.md)
      padding 90px 0 90px 0
    +above($breakpoints.xxl)
      padding 120px 0 120px 0

  &__title
    position relative
    z-index 1
    &:before
      content: ""
      position: absolute
      z-index -1
      background-color #0F45FF
      width: 162px;
      height: 46px;
      border-radius: 5px;
      transform: skewX(-12deg);
      bottom: 0px;
      left: 75px;
      +above($breakpoints.sm)
        width: 197px;
        height: 57px;
        bottom: 0px;
        left: -10px;
      +above($breakpoints.md)
        width: 226px;
        height: 70px;
        bottom: -2px;
        left: -10px;
      +above($breakpoints.xxl)
        width: 353px;
        height: 113px;
        bottom: 0px;
        left: -17px;

  &__sub-title
    padding 15px 0 15px 0
    +above($breakpoints.sm)
      padding 20px 0 30px 0
    +above($breakpoints.md)
      padding 20px 0 35px 0
    +above($breakpoints.xxl)
      padding 24px 0 40px 0

  &__img
    width 308px
    height: auto
    margin 15px auto 0
    border-radius: 10px
    +above($breakpoints.sm)
      margin 0
      position: absolute
      width 420px
      right: 0
      bottom: 50px
      border-radius: 15px
    +above($breakpoints.md)
      border-radius: 20px
      width 538px
      bottom: 90px
    +above($breakpoints.xxl)
      width 660px
      bottom: 120px

.brand-name-line
  background-image: url('../images/brand-name-line.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  width 100%
  height: 15px
  +above($breakpoints.sm)
    height: 30px
  +above($breakpoints.md)
    height: 50px
  +above($breakpoints.xxl)
    height: 80px
