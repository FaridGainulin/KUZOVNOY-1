.finances-section
  // background-image: url('../images/finances-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background-color #060526

  &__container
    position relative
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 50px 0 50px 0
    +above($breakpoints.md)
      padding 80px 0 80px 0
    +above($breakpoints.xxl)
      padding 120px 0 120px 0

  &__title,
  &__sub-title,
  &__card
    text-align: center

  &__sub-title
    padding 15px 0
    +above($breakpoints.sm)
      padding 25px 0
    +above($breakpoints.md)
      padding 35px 0
    +above($breakpoints.xxl)
      padding 40px 0

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      justify-content center
      gap: 10px
    +above($breakpoints.md)
      gap: 20px
    +above($breakpoints.xxl)
      gap: 40px

  &__card
    width 280px !important
    border-radius: 10px
    background-color #fff
    display: flex
    flex-direction: column
    align-items: center
    padding 15px 5px
    color: #211F1E
    +above($breakpoints.sm)
      border-radius: 15px
      width 235px !important
      padding 20px 10px 30px 10px
    +above($breakpoints.md)
      border-radius: 20px
      width 308px !important
      padding 30px 10px 40px 10px
    +above($breakpoints.xxl)
      width 360px !important
      height: 244px
      padding 40px 10px 50px 10px

  &__card-icon
    width 25px
    height: auto
    +above($breakpoints.sm)
      width 30px
    +above($breakpoints.md)
      width 35px
    +above($breakpoints.xxl)
      width 40px

  &__card-title
    padding 10px 0
    +above($breakpoints.sm)
      padding 10px 0 15px 0
    +above($breakpoints.md)
      padding 15px 0 15px 0
    +above($breakpoints.xxl)
      padding 20px 0 15px 0

  &__bottom
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    text-align: center
    margin 0 0 20px 0
    +above($breakpoints.sm)
      text-align: start
      align-items: flex-start
      margin 30px 0 20px 360px
    +above($breakpoints.md)
      gap: 15px
      margin 60px 0 30px 460px
    +above($breakpoints.xxl)
      gap: 22px
      margin 80px 0 40px 560px

  &__form
    position relative
    width 100%
    background-color #171717
    border-radius: 10px
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    padding 15px 10px
    +above($breakpoints.sm)
      padding 0
      flex-direction: row
      justify-content center
      border-radius: 15px
      gap: 20px
      height: 120px
    +above($breakpoints.md)
      border-radius: 20px
      gap: 30px
      height: 160px
    +above($breakpoints.xxl)
      height: 216px
      gap: 40px
    & > *
      width 280px !important
      +above($breakpoints.sm)
        width 200px !important
      +above($breakpoints.md)
        width 220px !important
      +above($breakpoints.xxl)
        width 260px !important

  &__img
    width: 120px;
    height: auto;
    position: absolute;
    bottom: 188px;
    left: -55px;
    +above($breakpoints.sm)
      width: 300px;
      bottom: 116px;
      left: 0;
    +above($breakpoints.md)
      width: 420px;
      bottom: 175px;
    +above($breakpoints.xxl)
      width 552px
      bottom: 251px
