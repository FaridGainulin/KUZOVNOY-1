.main-section
  background-color #060526
  background-image: url('../images/main-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover

  &__container
    position relative
    z-index 1
    padding 20px 0 0 0
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding 30px 0 70px 0
    +above($breakpoints.md)
      padding 50px 0 90px 0
    +above($breakpoints.xxl)
      padding 76px 0 146px 0
    &:after
      content: ""
      position: absolute
      width 120vw
      height: 100px
      left: -42vw
      background: linear-gradient(180deg, rgba(6, 5, 38, 0) 0%, #060526 100%);
      bottom: -1px
      +above($breakpoints.sm)
        z-index -1
        height: 178px;
        left: -19vw;
      +above($breakpoints.md)
        left: -23vw;
        height: 203px;
      +above($breakpoints.xxl)
        left: -24vw
        height: 266px

  &__box
    +above($breakpoints.sm)
      margin-left 265px
    +above($breakpoints.md)
      margin-left 400px
    +above($breakpoints.xxl)
      margin-left 500px

  &__title
    position relative
    z-index 1
    padding 20px 0 15px 0
    +above($breakpoints.sm)
      padding 70px 0 20px 0
    +above($breakpoints.md)
      padding 90px 0 25px 0
    +above($breakpoints.xxl)
      padding 145px 0 40px 0
    &:before
      content: ""
      position: absolute
      z-index -1
      background-color #0F45FF
      width: 90px;
      height: 20px;
      border-radius: 5px;
      transform: skewX(-12deg);
      bottom: 32px;
      left: 175px;
      +above($breakpoints.sm)
        width: 322px;
        height: 28px;
        bottom: 51px;
        left: -5px;
      +above($breakpoints.md)
        width: 458px;
        height: 42px;
        bottom: 70px;
        left: -5px;
      +above($breakpoints.xxl)
        width: 560px;
        height: 54px;
        bottom: 91px;
        left: -7px;
    &:after
      content: ""
      position: absolute
      z-index -1
      background-color #0F45FF
      width: 103px;
      height: 20px;
      border-radius: 5px;
      transform: skewX(-12deg);
      bottom: 13px;
      left: -3px;
      +above($breakpoints.sm)
        display: none

  &__sub-title
    display: flex
    align-items: flex-start
    justify-content center
    gap: 5px
    +above($breakpoints.sm)
      justify-content start
      gap: 10px
    +above($breakpoints.md)
      gap: 15px
    +above($breakpoints.xxl)
      gap: 20px

  &__sub-title-img
    width 16px
    height: auto
    +above($breakpoints.sm)
      width 20px
    +above($breakpoints.md)
      width 24px
    +above($breakpoints.xxl)
      width 27px

  &__text
    padding 15px 0
    +above($breakpoints.sm)
      padding 20px 0
    +above($breakpoints.md)
      padding 30px 0
    +above($breakpoints.xxl)
      padding 40px 0

  &__form
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    margin-bottom 15px
    +above($breakpoints.sm)
      margin 0
      width 425px
      flex-direction: row
      flex-wrap: wrap
      gap: 10px
    +above($breakpoints.md)
      gap: 15px
    +above($breakpoints.xxl)
      gap: 20px
    input
      width 280px !important
      height: 50px !important
      +above($breakpoints.sm)
        width 200px !important
        height: 60px !important
      +above($breakpoints.md)
        height: 65px !important
      +above($breakpoints.xxl)
        height: 70px !important
    button
      width 280px !important
      height: 60px !important
      +above($breakpoints.sm)
        width 410px !important
        height: 80px !important
      +above($breakpoints.md)
        height: 100px !important
        width 415px !important
      +above($breakpoints.xxl)
        width 420px !important
        height: 120px !important

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-direction: column
      gap: 10px
      position: absolute
      left: 0
      bottom: 141px
    +above($breakpoints.md)
      gap: 15px
      bottom: 175px
    +above($breakpoints.xxl)
      gap: 20px
      bottom: 202px

  &__card
    width 260px !important
    height: 40px
    +above($breakpoints.sm)
      width 220px !important
      height: 40px
    +above($breakpoints.md)
      width 300px !important
      height: 48px
    +above($breakpoints.xxl)
      width 330px !important
      height: 54px

  &__card-wrapper
    display: flex
    justify-content center
    align-items: center
    gap: 5px
    background-color #060526
    border: 1px solid #525252
    border-radius: 5px
    width 100%
    height: 100%
    transform: skewX(-15deg) !important
    +above($breakpoints.sm)
      justify-content start
      padding-left 10px
      gap: 10px
    +above($breakpoints.md)
      padding-left 15px
    +above($breakpoints.xxl)
      align-items: flex-end
      padding-left 20px
      padding-bottom 14px

  &__img
    width 308px
    height: auto
    +above($breakpoints.sm)
      position: absolute
      z-index -1
      width 498px
      bottom: 0
      left: -224px
    +above($breakpoints.md)
      width 664px
      left: -280px
    +above($breakpoints.xxl)
      width 864px
      left: -380px

.main-card-2
  +above($breakpoints.sm)
    width 206px !important
  +above($breakpoints.md)
    width 280px !important
  +above($breakpoints.xxl)
    width 310px !important
.main-card-3
  +above($breakpoints.sm)
    width 192px !important
  +above($breakpoints.md)
    width 260px !important
  +above($breakpoints.xxl)
    width 290px !important
.main-card-skew
  transform: skewX(15deg)
